      <%= hidden_field_tag :type, type%>
    <div>
      <div class='journal-content-title'>標題</div>
      <p class='journal-edit-title'>
        <% title = record.title ? record.title : "#{record.todo_time.to_s(:md)}日誌"%>
        <%= text_field :record, :title, :value => title %>
      </p>
      <div class='journal-content-title'>時間</div>
      <div id='edit_time_form' style='display:none'>
        <% form_remote_tag :url => {:action => 'edit_record_time', :id => @record} do %>
          <%= datetime_select :record, :todo_time, :use_month_numbers => true, :end_year => Time.now.year %>
          <%= submit_tag "設定" %>
        <% end %>
      </div>
      <p class='journal-edit-time' id='edit_remote_result'>
        <% 
          if @realtime 
            concat record.todo_time.to_s(:mdate)
            datetime_select :record, :todo_time, :use_month_numbers => true, :end_year => Time.now.year 
          else
            concat datetime_select :record, :todo_time, :use_month_numbers => true, :end_year => Time.now.year
          end
        %>
      </p>
      <%= hidden_field :record, :state%>

      <div class='journal-content-title'>公開/隱藏</div>
      <p class='journal-edit-title'>
        <% SEALED.each do |k, v| %>
          <%= v %>
          <%= radio_button(:record, :pri, k)%>
        <% end %>
      </p>

      <div class='journal-content-title'><a name='yjournal'></a>昨日檢討</div>
      <p><%= text_area :record, 'content2', :rows => '20', :cols => '36', :class => 'mceEditor' %></p>
      <div class='journal-content-title'><a name='tjournal'></a>今日日誌</div>
      <p><%= text_area :record, 'content', :rows => '20', :cols => '36', :class => 'mceEditor' %></p>
    </div>

    <span class='journal-content-title'><a name='tgoals'></a>今日目標</span>
    <a href='#once-goal-form' class='once-goal-add'>新增今日目標</a>
    <span class='daily-goals-add'>
      <%= b_image_tag('toggle_plus.gif', :class => 'toggle_plus')%>
      <%= b_image_tag('toggle_minus.gif', :class => 'toggle_minus')%>
      <a href='#daily-goals-submit'>加進習慣性目標</a>
    </span>
    <div name='once-goal-form' class='once-goal-form' style='display:none'>
      <span class='w-red fw-bold'>目標名稱:</span> 
      <span class="once_goal_name">
        <input name="comment" type="text" value="只有今天要做的目標" />
      </span>
      <input type='button' value="新增" id="once_goal_submit" />
    </div>
    <table id='today_goals'>
      <thead class='have-goals'>
        <th></th> <th>已完成</th> <th>名稱</th> <th>註解</th> <th>數量</th> <th>順序</th> 
      </thead>
      <tbody class='today-goals-list'>
        <tr class='no-goals w-red fw-bold'><td class='pad-10'> 您還沒有任何的目標喔 </td></tr>
          <% @today_goals.each do |g|%>
            <% goal_id = g.goal ? g.goal.id : 'once' %>
            <tr goal_id=<%=goal_id%>>
              <td class='goal_detail' detail_id=<%= g.id %>></td>
              <td class="goal_done">
                <%= goal_ck_box(goal_id, 'done', g.done)%>
              </td>
              <td class="goal_name">
                <%= h(g.name) %>
                <%= hidden_field_tag "item[#{goal_id}][name]", g.name%>
              </td>
              <td class="goal_comment">
                <%= text_field_tag "item[#{goal_id}][comment]", g.comment %>
              </td>

                <%= content_tag(:td, text_field_tag("item[#{goal_id}][value]", g.value, :size => 10), :class => 'goal_value') %>

              <td class="goal_rank">
                <%= text_field_tag "item[#{goal_id}][rank]", g.rank, :size => 3 %>
              </td>
              <td class="goal_del">
                <%= b_image_tag("delete.png", :border => "0")%>
              </td>
              <td class="goal_type">
                <%= hidden_field_tag "item[#{goal_id}][goal_type]", g.goal_type %>
              </td>
              <td class="goal_old_value">
                <%= hidden_field_tag "item[#{goal_id}][old_value]", g.done == 1 ? g.value : 0%>
              </td>
            </tr>
          <% end %>
      </tbody>
    </table>
    <div class='journal-submit'>
      <%= submit_tag '儲存' %>
      <%= link_to_cancel('member', '取消') %>
    </div>
