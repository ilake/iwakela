    </div>
    <![endif]-->
		<div class="content">
	    
			<div class="item">
        <%#= show_messages %>
        <%= yield %>
        <%= yield :sider %>
			</div>

		</div>

	</div>
  <div class='clear'></div>
  <div class="footer">
    <%= link_to "關於早鳥", :controller => 'about', :action => 'about'%>
    <%= mail_to "iwakela@gmail.com", "聯絡早鳥" %>
    <%= link_to '新朋友註冊', :controller => 'main', :action => 'register'%>
